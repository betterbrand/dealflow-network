# DealFlow Network Environment Variables
# Copy this file to .env for development or .env.production for production

# ============================================================================
# REQUIRED - Application will not start without these
# ============================================================================

# Database connection string (MySQL)
# Format: mysql://username:password@host:port/database
# Example: mysql://root:password@localhost:3306/dealflow
DATABASE_URL=mysql://user:password@host:port/database

# Database connection pool size (default: 10)
# Recommended: 10-20 for production, adjust based on concurrent users
DB_POOL_SIZE=10

# JWT secret for magic link authentication (use a long random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server port (default: 3000)
PORT=3000

# Node environment (development | production)
NODE_ENV=development

# ============================================================================
# EMAIL SERVICE (Required for magic link authentication)
# ============================================================================

# Resend API key for sending magic link emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxx

# Email address for sending magic links
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# LLM INFERENCE PROVIDERS
# ============================================================================

# mor.org API key - Primary inference provider (FREE during Open Beta)
# Get from: https://api.mor.org/docs (login and create API key)
MOR_ORG_API_KEY=your-mor-org-key-here

# Anthropic API key - Fallback provider (Optional but recommended)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-key-here

# ============================================================================
# AI FEATURES (Legacy - Optional)
# ============================================================================

# OpenAI API key for natural language query parsing (DEPRECATED: use MOR_ORG_API_KEY)
OPENAI_API_KEY=sk-xxx

# ============================================================================
# TELEGRAM INTEGRATION (Optional)
# ============================================================================

# Telegram bot token for contact extraction
# Get from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=xxx:xxx

# ============================================================================
# PROFILE ENRICHMENT (Optional - need at least one for LinkedIn import)
# ============================================================================

# Scrapingdog API key for LinkedIn profile import (RECOMMENDED - faster)
# Get from: https://www.scrapingdog.com/
SCRAPINGDOG_API_KEY=xxx

# BrightData API key for LinkedIn profile enrichment (slower fallback)
# Get from: https://brightdata.com/
BRIGHTDATA_API_KEY=xxx

# ============================================================================
# TWITTER/X ENRICHMENT (Optional - Apify)
# ============================================================================

# Apify API key for Twitter profile scraping and tweet analysis
# Get from: https://console.apify.com/account/integrations
APIFY_API_KEY=apify_api_xxx

# Apify Twitter scraper actor ID (default: apify/twitter-scraper)
# Can be changed if using a different/custom actor
APIFY_TWITTER_ACTOR_ID=apify/twitter-scraper

# ============================================================================
# FILE STORAGE (Optional - AWS S3)
# ============================================================================

# AWS S3 credentials for file uploads
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ============================================================================
# OAUTH & ADMIN (Optional)
# ============================================================================

# OAuth configuration
VITE_APP_ID=your-app-id
OAUTH_SERVER_URL=https://your-oauth-server.com

# Owner OpenID for admin access
OWNER_OPEN_ID=your-openid

# ============================================================================
# FRONTEND BUILD-TIME VARIABLES (VITE_*)
# These are REPLACED at build time, not available at runtime
# ============================================================================

# Application title
VITE_APP_TITLE=DealFlow Network

# Application logo URL
VITE_APP_LOGO=https://your-domain.com/logo.png

# OAuth app ID (frontend)
VITE_APP_ID=your-app-id

# OAuth portal URL
VITE_OAUTH_PORTAL_URL=https://your-oauth-server.com

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Vite HMR host for Docker development
VITE_HMR_HOST=localhost
