# DealFlow Network Environment Variables
# Copy this file to .env for development or .env.production for production

# ============================================================================
# REQUIRED - Application will not start without these
# ============================================================================

# Database connection string (MySQL)
# Format: mysql://username:password@host:port/database
# Example: mysql://root:password@localhost:3306/dealflow
DATABASE_URL=mysql://user:password@host:port/database

# JWT secret for magic link authentication (use a long random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server port (default: 3000)
PORT=3000

# Node environment (development | production)
NODE_ENV=development

# ============================================================================
# EMAIL SERVICE (Required for magic link authentication)
# ============================================================================

# Resend API key for sending magic link emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxx

# Email address for sending magic links
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# AI FEATURES (Optional - enables AI-powered query parsing)
# ============================================================================

# OpenAI API key for natural language query parsing
OPENAI_API_KEY=sk-xxx

# Manus Forge API configuration
BUILT_IN_FORGE_API_URL=https://api.manus.computer
BUILT_IN_FORGE_API_KEY=your-forge-api-key

# ============================================================================
# TELEGRAM INTEGRATION (Optional)
# ============================================================================

# Telegram bot token for contact extraction
# Get from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=xxx:xxx

# ============================================================================
# PROFILE ENRICHMENT (Optional)
# ============================================================================

# BrightData API key for LinkedIn profile enrichment
BRIGHTDATA_API_KEY=xxx

# ============================================================================
# FILE STORAGE (Optional - AWS S3)
# ============================================================================

# AWS S3 credentials for file uploads
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ============================================================================
# OAUTH & ADMIN (Optional)
# ============================================================================

# Manus OAuth configuration
VITE_APP_ID=your-app-id
OAUTH_SERVER_URL=https://oauth.manus.computer

# Owner OpenID for admin access
OWNER_OPEN_ID=your-openid

# ============================================================================
# FRONTEND BUILD-TIME VARIABLES (VITE_*)
# These are REPLACED at build time, not available at runtime
# ============================================================================

# Application title
VITE_APP_TITLE=DealFlow Network

# Application logo URL
VITE_APP_LOGO=https://your-domain.com/logo.png

# Manus OAuth app ID (frontend)
VITE_APP_ID=your-app-id

# OAuth portal URL
VITE_OAUTH_PORTAL_URL=https://oauth.manus.computer

# Manus Forge API configuration (frontend)
VITE_FRONTEND_FORGE_API_URL=https://api.manus.computer
VITE_FRONTEND_FORGE_API_KEY=your-forge-api-key

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Vite HMR host for Docker development
VITE_HMR_HOST=localhost
